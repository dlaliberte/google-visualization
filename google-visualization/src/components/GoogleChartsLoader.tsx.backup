        data.addRows([
          ['Mike', { v: 10000, f: '$10,000' }, true, new Date(2020, 1, 15)],
          ['Jim', { v: 8000, f: '$8,000' }, false, new Date(2020, 3, 22)],
          ['Alice', { v: 12500, f: '$12,500' }, true, new Date(2019, 11, 5)],
